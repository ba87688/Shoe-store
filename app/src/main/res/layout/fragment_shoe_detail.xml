<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.shoedetail.ShoeDetailFragment">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            app:layout_constraintBottom_toTopOf="@+id/et_shoe_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_shoe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:ems="10"
            android:hint="Shoe Name"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/et_shoe_company"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_shoe_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Shoe company"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_shoe_name"
            app:layout_constraintStart_toStartOf="@+id/et_shoe_name"
            tools:layout_editor_absoluteY="274dp" />

        <EditText
            android:id="@+id/et_shoe_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Shoe Size"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/et_shoe_description"
            app:layout_constraintEnd_toEndOf="@+id/et_shoe_company"
            app:layout_constraintStart_toStartOf="@+id/et_shoe_company"
            app:layout_constraintTop_toBottomOf="@+id/et_shoe_company" />

        <EditText
            android:id="@+id/et_shoe_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Shoe Description"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_shoe_size"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_shoe_size"
            tools:layout_editor_absoluteY="410dp" />

        <Button
            android:id="@+id/button_cancel_shoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="48dp"
            android:text="Cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_shoe_description" />

        <Button
            android:id="@+id/button_save_shoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="@+id/button_cancel_shoe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_cancel_shoe" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>